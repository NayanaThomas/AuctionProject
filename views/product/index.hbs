<br />
<form class="form-inline float-right" action="/product/search" method="post">
    <input class="form-control mr-sm-2" id="productname" name="productname" type="search" placeholder="Product Name" aria-label="Search">
    <div class="form-group">
        <select class="form-control" id="sel1" name="sel1" placeholder="Categories">
            <option value="All Categories">All Categories</option>
            <option value="Electronics">Electronics</option>
            <option value="Books">Books</option>
            <option value="Pet Supplies">Pet Supplies</option>
            <option value="Furniture">Furniture</option>
            <option value="Others">Others</option>
         </select>
    </div>
    <div class="form-group">
        <button class="btn btn-primary my-2 my-sm-0" type="submit">Search</button>
    </div>
</form>
<br />

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">Product</th>
            <th scope="col">Details</th>
            <th scope="col"></th>
        </tr>
    </thead>

    {{# each products }}
    <tr>
        <td class="thumbnail"><img src="{{this.image}}" alt="Product image" class="img-responsive thumbnail"></td>
        <td>
            <ul class="list-unstyled">
                <li class="font-weight-bold">{{ this.name }}</li>
                <li>Category: {{ this.category }}</li>
                <li>Description: {{ this.description }}</li>
                <li>Time: {{ this.timer }}</li>
				<li>End Date: {{ this.date }}</li>
                <li>Current Bid: {{ this.amount }}</li>
                <li>Seller: {{ this.seller }}</li>
                <!-- <li>Buyer: {{this.buyer}} </li> -->
            </ul>
        </td>
        <td>
        
            
            <form action="/user/product/{{this._id}}" method="get">
                <button id="bid" type="submit" style="margin-bottom: 0.5em" class="btn btn-primary">Bid</button>
            </form>

            <form action="/favourites/{{this._id}}" method="post">
                <button id="fav" type="submit" class="btn btn-primary"><i class="fas fa-check-circle"></i></button>
            </form>
        
        </td>
    </tr>
    {{/each}}
</table>

{{#if (eq pageinationBar 1)}}
<div id="pagination" >
<nav aria-label="...">
  <ul class="pagination justify-content-center">
    <li class="page-item">
    {{#if (eq currentPage 1)}}
    <li class="page-item disabled">
    {{/if}}
      <a class="page-link" href="/user/home/{{prevPage}}" tabindex="-1">Previous</a>
    </li>

    <li class="page-item">
    {{#if (eq  currentPage 1)}}
    <li class="page-item active">
    {{/if}}
    <a class="page-link" href="/user/home">1</a></li>
     
    <li class="page-item">
    {{#if (eq currentPage 2)}}
    <li class="page-item active">
    {{/if}}
    {{#if (eq currentPage pages)}}
    <li class="page-item disabled">
    {{/if}}
    <a class="page-link" href="/user/home/2">2 <span class="sr-only">(current)</span></a>
    </li>

    <li class="page-item">
    {{#if (eq currentPage pages)}}
    <li class="page-item disabled">
    {{/if}}
      <a class="page-link" href="/user/home/{{nextPage}}">Next</a>
    </li>
  </ul>
</nav>
</div>
{{/if}}