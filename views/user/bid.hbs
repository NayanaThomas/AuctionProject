<h3>Submit your bid amount here</h3>
<br />
<table class="table table-hover">
    <tr>
        <!-- <th scope="row">1</th> -->
        <!--<td class="thumbnail"><img src="{{products.image}}" alt="Product image" class="img-responsive thumbnail"></td>
        <td>-->
        <td class="thumbnail"><img src="{{products.image}}" alt="Product image" class="img-responsive thumbnail"></td>
        <td>

                <ul class="list-unstyled">
                    <li class="font-weight-bold">{{ products.name }}</li>
                    <li>Category: {{ products.category }}</li>
                    <li>Description: {{ products.description }}</li>
                    <li>Minimum Bid: {{ products.amount }}</li>
                    <!-- <li>Buyer: {{this.buyer}} </li> -->
                </ul>

            <form action="/user/product/{{products._id}}" method="post">
                <label for="amount">Amount:</label>
                <input type="hidden" name="_csrf" value="{{ csrfToken }}">
                <input type="number" name="amount" id="amount">

                <button id="bid" type="submit" class="btn btn-primary">Submit</button>
            </form>
        </td>
    </tr>
</table>
